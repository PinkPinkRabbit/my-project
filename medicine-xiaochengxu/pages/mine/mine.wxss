/* pages/mine/mine.wxss */
.userinfo{
  width: 100%;
  height: 226rpx;
  background-color: rgba(218, 34, 34, 1);
  border-color: rgba(218, 34, 34, 1);
  border-width: 1rpx;
  border-style: solid;
  display: flex;
  align-items: center;
}
.userinfo .image{
  width: 120rpx;
  height: 120rpx;
  display: flex;
  border-radius: 50%;
  margin-left: 10%;
  border: 5rpx solid #FFFFFF;
}
.userinfo .name{
  font-family: '微软雅黑';
  font-weight: 400;
  font-style: normal;
  color: #FFFFFF;
  font-size: 14px;
  margin-left: 5%;
}